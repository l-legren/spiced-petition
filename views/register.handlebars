<form id="register-form" method="post">
    <h2>Please register to sign the petition</h2>
    <input type="text" class="registering" name="first" placeholder="First Name">
    <input type="text" class="registering" name="last" placeholder="Last Name">
    <input type="email" class="registering" name="email" placeholder="E-Mail">
    <input type="password" class="registering" name="password" placeholder="Password">
    <button id="submit-register" type="submit">SIGN UP</button>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>
<p id="already-member">If you are already registered please <a href="./login">log in</a>.</p>
{{#if errorSigning}}
<p id="fail-sign-up" style="color: red">Failing to sign up. Please check all the fields above</p>
{{/if}}